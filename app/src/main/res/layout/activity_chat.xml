<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar with Back Arrow -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:navigationIcon="@drawable/baseline_arrow_back_24"
        android:padding="8dp" />

    <!-- RecyclerView to display chat messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_messages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/chat_input_layout"
        android:layout_below="@id/toolbar_chat"
        android:layout_marginTop="-1dp"
        android:layout_marginBottom="1dp"
        android:padding="8dp" />

    <!-- Chat Input Section -->
    <LinearLayout
        android:id="@+id/chat_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Media Button -->
        <ImageButton
            android:id="@+id/btn_attach_media"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Attach Media"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_camera" />

        <!-- Message Input -->
        <EditText
            android:id="@+id/et_message"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Type a message"
            android:inputType="textCapSentences"
            android:padding="8dp" />

        <!-- Send Button -->
        <ImageButton
            android:id="@+id/btn_send"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Send Message"
            android:src="@android:drawable/ic_menu_send" />
    </LinearLayout>

    <!-- Hidden Section for Attached Photo -->
    <FrameLayout
        android:id="@+id/photo_preview_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:padding="8dp">

        <!-- ImageView to Display Photo -->
        <ImageView
            android:id="@+id/photo_preview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="Photo Preview" />
    </FrameLayout>
</RelativeLayout>
